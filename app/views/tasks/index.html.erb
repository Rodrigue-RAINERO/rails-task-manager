<div class="big-box">
  <h1>My tasks</h1>
  <ul class="index">
    <% @tasks.each do |task| %>
      <li class="d-flex">
        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
        <div class="d-flex text-delete">
          <div class="list">
            <%= link_to task.title, task_path(task), class:"link" %>
          </div>
          <div class="delete ms-auto">
            <%= link_to "delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"link" %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="new-task">
    <%= link_to "Add a new task", new_task_path, class:"link" %>
  </div>
</div>
